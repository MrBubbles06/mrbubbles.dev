{
  "name": "portfolio",
  "version": "1.0.0",
  "description": "a portfolio website",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "css:scss": "node-sass --output-style compressed -o dist src/scss",
    "css:autoprefixer": "postcss -u autoprefixer -r dist/*.css",
    "css:lint": "stylelint src/scss/*.scss  --custom-syntax postcss-scss",
    "watch:css": "onchange \"src/scss\" -- npm run build:css",
    "build:images": "imagemin src/images/**/* --out-dir=dist/images",
    "watch:images": "onchange \"src/images\" -- npm run build:images",
    "serve": "browser-sync start --server \"dist\" --files \"dist\" --browser 'firefox nightly'",
    "build:css": "npm run css:lint && npm run css:scss && npm run css:autoprefixer",
    "build:js": "webpack --mode=production",
    "watch:js": "onchange \"src/js\" -- webpack --mode=development",
    "build:html": "posthtml -c posthtml.json",
    "watch:html": "onchange \"src/views\" -- npm run build:html",
    "watch": "run-p serve watch:*",
    "build": "run-p build:*"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MrBubbles06/portfolio.git"
  },
  "author": "William Beemer",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/MrBubbles06/portfolio/issues"
  },
  "homepage": "https://github.com/MrBubbles06/portfolio#readme",
  "devDependencies": {
    "@babel/preset-env": "^7.20.2",
    "autoprefixer": "^10.4.13",
    "babel-loader": "^9.1.0",
    "bootstrap-icons": "^1.10.2",
    "browser-sync": "^2.27.10",
    "eslint": "^8.28.0",
    "eslint-webpack-plugin": "^3.2.0",
    "htmlnano": "^2.0.3",
    "imagemin-cli": "^7.0.0",
    "node-sass": "^8.0.0",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "postcss-cli": "^10.1.0",
    "postcss-scss": "^4.0.6",
    "posthtml": "^0.16.6",
    "posthtml-cli": "^0.10.0",
    "posthtml-modules": "^0.9.0",
    "stylelint": "^14.15.0",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.0"
  }
}
